class Solution {
    int mod = 1000000007;
    public int sumSubarrayMins(int[] arr) {
        int n = arr.length;
        int[] dp = new int[n];
        for (int i = 0; i < n; i ++) {
            dp[i] = arr[i];
        }
        int total = 0;
        for (int l = 1; l <= n; l ++) {
            for (int i = 0; i < n - l + 1; i ++) {
                dp[i] = Math.min(dp[i], arr[i + l - 1]);
                total += dp[i];
                total = total % mod;
            }
        }
         
        return total;
    }
}
